{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "inlineSources": true,
    "alwaysStrict": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": ["test", "./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}